<div class="list-groups">
  {% for content in data[1] %}
    <div class="list-group col-md-12">
      <table class="table-cv list-group-table">
        <tbody>
          <!-- Reference Name -->
          <tr>
            {% if content.icon %}
              <td class="list-group-category-icon">
                <i class="{{ content.icon }}"></i>
              </td>
            {% else %}
              <td class="list-group-category-icon"></td>
            {% endif %}
            <td class="list-group-category">
              <b>
                {% if content.url %}
                  <a href="{{ content.url }}" target="_blank" rel="noopener noreferrer">
                    {{ content.name }}
                  </a>
                {% else %}
                  {{ content.name }}
                {% endif %}
              </b>
            </td>
          </tr>
          <!-- Reference Details (Italicized) -->
          <tr>
            <td></td>
            <td class="list-group-name">
              <b>{{ content.reference }}</b>
            </td>
          </tr>
          <!-- Additional Line Under Reference -->
          {% if content.additional_info %}
            <tr>
              <td></td>
              <td class="list-group-name">
                <i>{{ content.additional_info }}</i>
              </td>
            </tr>
          {% endif %}
          <!-- Additional Labels/Categories -->
          {% if content.labels %}
            {% for label in content.labels %}
              <tr>
                <td></td>
                <td class="list-group-label">
                  <b>{{ label.category }}:</b> {{ label.value }}
                </td>
              </tr>
            {% endfor %}
          {% endif %}
        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
